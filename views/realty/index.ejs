<% include ../partials/start %>
<% include ../partials/nav %>

<section class="container content-height py-3">
    <div class="d-flex justify-content-between align-items-start">
        <a href="/imoveis/novo" class="btn btn-primary mb-3">Adicionar Imóvel</a>
        <div class="text-right">
            <small class="d-block">
                <span class="mr-1"><i class="fas fa-xs fa-circle text-success"></i> Alugado</span>
                <span><i class="fas fa-xs fa-circle text-warning"></i> Disponível</span>
            </small>
            <small class="d-block">Total: <%= realty.length %> imóveis</small>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-sm bg-white">
            <thead>
                <tr>
                    <th scope="col">Status</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Dono</th>
                    <th scope="col">Inquilino</th>
                    <th scope="col">Início do Contrato</th>
                    <th scope="col">Fim do Contrato</th>
                    <th scope="col">Aluguel <small>(R$)</small></th>
                    <th scope="col">Condomínio <small>(R$)</small></th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% realty.forEach(function(realty, index) { %>
                    <tr>
                        <% var isRented = (realty.isRented === "Sim") ? "text-success" : "text-warning" %>
                        <th scope="row"><i class="fas fa-xs fa-circle <%= isRented %>"></i></th>
                        <td>
                            <a href="/imoveis/<%= realty._id %>" title="Acessar página do imóvel">
                                <%= realty.name %>
                            </a>
                        </td>
                        <td><%= realty.owner %></td>
                        <td><%= realty.tenant.name %></td>
                        <td>
                            <% if(realty.contractStart) { %>
                                <%= moment(realty.contractStart).format("DD[/]MM[/]YY") %>
                            <% } %>
                        </td>
                        <td>
                            <% if(realty.contractEnd) { %>
                                <%= moment(realty.contractEnd).format("DD[/]MM[/]YY") %>
                            <% } %>
                        </td>
                        <td>
                            <% if(realty.rentValue > 0) { %>
                                <%= realty.rentValue %>
                            <% } %>
                        </td>
                        <td>
                            <% if(realty.condominiumValue > 0) { %>
                                <%= realty.condominiumValue %>
                            <% } %>
                        </td>
                        <td>
                            <!-- Trigger delete realty modal -->
                            <% if (currentUser.isAdmin) { %>
                            <a href="#" class="text-danger" data-toggle="modal" data-target="#realty<%= index %>" title="Deletar imóvel">
                                <i class="fas fa-trash"></i>
                            </a>
                            <% } %>
                            <!-- Go to edit realty page -->
                            <a href="/imoveis/<%= realty._id %>/edit" class="text-info" title="Editar imóvel">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <!-- Delete realty modal -->
                        <div class="modal fade" id="realty<%= index %>" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Excluir Imóvel</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                          <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Você tem certeza que deseja excluir este imóvel?
                                    </div>
                                    <div class="modal-footer">
                                        <form action="/imoveis/<%= realty._id %>?_method=DELETE" method="POST" class="d-inline">
                                            <button class="btn btn-danger">Sim</button>
                                        </form>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</section>

<% include ../partials/footer %>
<% include ../partials/end %>
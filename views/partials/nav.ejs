<!--Navbar-->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark box-shadow">
    <a class="navbar-brand" href="/"><i class="fas fa-building"></i> Grupo CTC</a>
    
    <!--Navbar navigation toggler-->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Menu">
        <span class="navbar-toggler-icon"></span>
    </button>
    
    <!--Navbar navigation-->
    <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <!--Nav link (active if on page)-->
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'visao-geral' ? 'active' : '' %>" href="/visao-geral">
                    Visão Geral
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'imoveis' ? 'active' : '' %>" href="/imoveis">
                    Imóveis
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'inquilinos' ? 'active' : '' %>" href="/inquilinos">
                    Inquilinos
                </a>
            </li>
            
            <!--Show if user is not logged in-->
            <% if(!currentUser) { %>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'registrar' ? 'active' : '' %>">
                    <a class="nav-link" href="/registrar">
                        Registrar
                    </a>
                </li>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'entrar' ? 'active' : '' %>">
                    <a class="nav-link" href="/entrar">
                        <i class="fas fa-sign-in-alt"></i> Entrar
                    </a>
                </li>
            
            <!--Show if user is logged in-->
            <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">
                        <i class="fas fa-sign-out-alt"></i> Sair
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
</nav>

<!--Flash messages-->
<div class="container-fluid">
    <!--Error flash messages-->
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible mb-0 mt-3" role="alert">
            <%= error %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
    
    <!--Success flash messages-->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible mb-0 mt-3" role="alert">
            <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
</div>
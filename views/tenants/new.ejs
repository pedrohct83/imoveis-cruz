<% include ../partials/start %>
<% include ../partials/nav %>

<div class="container content-height py-3">
    <div class="d-flex flex-column align-items-center justify-content-center">
        <!--Title-->
        <h1 class="font-weight-light text-center mb-3">Novo Inquilino</h1>
        <div class="card bg-white rounded-0 box-shadow">
            <div class="card-body">
                <!--New tenant form-->
                <form action="/inquilinos" method="POST">
                    <!--Name and type-->
                    <div class="form-row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="name">Nome/Razão Social <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="type">Tipo <span class="text-danger">*</span></label>
                                <select class="custom-select" id="type" name="type" required>
                                    <% var options = ["Pessoa Física", "Pessoa Jurídica"] %>
                                    <% for (var i = 0; i < options.length; i++) { %>
                                        <option value="<%= options[i] %>"><%= options[i] %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                    </div> 
                    
                    <!--CPF-->
                    <div class="form-group d-none cpfField">
                        <label for="cpf">CPF</label>
                        <input type="text" class="form-control" id="cpf" name="cpf" data-inputmask="'mask': '999.999.999-99'">
                    </div>
                    
                    <!--CNPJ-->
                    <div class="form-group d-none cnpjField">
                        <label for="cnpj">CNPJ</label>
                        <input type="text" class="form-control" id="cnpj" name="cnpj" data-inputmask="'mask': '99.999.999/9999-99'">
                    </div>
                    
                    <!--Contact name and telephone-->
                    <div class="form-row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="contactName">Nome p/ Contato</label>
                                <input type="text" class="form-control" id="contactName" name="contactName">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="phone">Telefone p/ Contato</label>
                                <input type="tel" class="form-control" id="phone" name="phone"  data-inputmask="'mask': '(99) 99999999[9]'">
                            </div>
                        </div>
                    </div>
                    
                    <!--Contact e-mail-->
                    <div class="form-group">
                        <label for="contactEmail">Email p/ Contato</label>
                        <input type="email" class="form-control" id="contactEmail" name="contactEmail">
                    </div>
                    
                    <!--Notes-->
                    <div class="form-group">
                        <label for="notes">Informações Adicionais</label>
                        <textarea class="form-control" id="notes" name="notes" rows="4" maxlength="300"></textarea>
                        <small id="notesHelpBlock" class="form-text text-muted">
                            Máximo: 300 caracteres.
                        </small>
                    </div>
                    
                    <!--Save button-->
                    <div class="d-flex justify-content-between align-items-start">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                        <p class="text-danger">* <small class="m-0">Campos obrigatórios</small></p>
                    </div>
                </form>
            </div>
        </div>
        
        <!--Back link-->
        <a href="javascript:history.back()" class="mt-3">&laquo; Voltar</a>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/end %>
<% include ../partials/start %>
<% include ../partials/nav %>

<div class="container content-height py-3">
    <div class="d-flex flex-column align-items-center justify-content-center">
        <!--Title-->
        <h1 class="font-weight-light text-center mb-3">Editar Comentário</h1>
        
        <!--Card-->
        <div class="card bg-white rounded">
            <div class="card-body">
                <!--Edit comment form-->
                <form action="/imoveis/<%= realtyId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" name="comment[text]" rows="5" cols="70" maxlength="600"><%= comment.text %></textarea>
                        <small id="notesHelpBlock" class="form-text text-muted">
                            Máximo: 600 caracteres.
                        </small>
                    </div>
                    <div class="form-group mb-0">
                        <button class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
        
        <!--Back Link-->
        <a href="javascript:history.back()" class="mt-3">&laquo; Voltar</a>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/end %>